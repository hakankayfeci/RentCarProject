@model RCP.Model.User
@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Bilgilerini Güncelleme Ekranı</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Login Page Content Start ==-->
<section id="lgoin-page-wrap" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-8 m-auto">
                <div class="login-page-content">
                    <div class="login-form">
                        <h3>Kullanıcı Bilgilerim</h3>
                        @Html.Partial("MessagePartial", TempData["Mesaj"])
                        <form action="User/Profile" method="post">
                            <div class="name">
                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="text" name="Name" placeholder="İsim" value="@Model.Name">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="Surname" placeholder="Soyad" value="@Model.Surname">
                                    </div>
                                </div>
                            </div>
                            <div class="name">
                                <input type="email" name="Email" placeholder="E-Posta" value="@Model.Email">
                            </div>
                            <div class="username">
                                <input type="text" name="Username" placeholder="Kullanıcı Adı" value="@Model.Username">
                            </div>
                            <div class="password">
                                <input type="password" id="password" name="Password" placeholder="Şifre" value="@Model.Password">
                                <i class="fa fa-eye-slash" onclick="togglePassword()"></i>
                            </div>
                            <div class="name">
                                <input type="number" name="Phone" placeholder="Telefon No" value="@Model.Phone">
                            </div>
                            <div class="log-btn">
                                <button type="submit"><i class="fa fa-check-square"></i> Güncelle</button>
                            </div>
                        </form>
                    </div>

                 
                </div>
            </div>
        </div>
    </div>
</section>
<!--== Login Page Content End ==-->
<script>
    function togglePassword() {
        var element = document.getElementById('password');
        element.type = (element.type == 'password' ? 'text' : 'password');
    }
</script>