@model RCP.UI.ViewModel.BlogDetailViewModel
    @{
        ViewBag.Title = "Blog Detay";
    }


    <!--== Car List Area Start ==-->
    <section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->
                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>@Model.Title</h2>
                        <div class="car-preview-crousel">
                            @foreach (var item in Model.blogPhoto)
                            {
                                <div class="single-car-preview">
                                    <img src="@item.Photo" alt="JSOFT">
                                </div>
                                <div class="single-car-preview">
                                    <img src="assets/img/car/car-5.jpg" alt="Örnek Resim">
                                </div>

                            }

                        </div>
                        <div class="car-details-info blog-content">
